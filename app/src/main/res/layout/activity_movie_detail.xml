<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin16dp"
    android:paddingLeft="@dimen/margin16dp"
    android:paddingRight="@dimen/margin16dp"
    android:paddingTop="@dimen/margin16dp"
    tools:context=".MovieDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/scrollViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/detaillayout"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/moviePoster"
                android:layout_width="@dimen/nulldp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin16dp"
                android:layout_height="wrap_content"
                android:transitionName="@string/transition_string" tools:targetApi="21"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/nulldp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_tv"
                    android:textSize="@dimen/size30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/date_released_tv"
                    android:textSize="@dimen/size22dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RatingBar
                    android:id="@+id/voter_average"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="10"
                    android:max="10"
                    android:layout_marginRight="@dimen/margin2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/vote_average_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
                <TextView
                    android:id="@+id/overview_tv"
                    android:textSize="@dimen/size16dp"
                    android:layout_below="@id/detaillayout"
                    android:layout_marginTop="@dimen/margin16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>



</RelativeLayout>
