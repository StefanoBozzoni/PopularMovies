<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/nulldp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_movie_detail">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/size30sp"
        tools:contentDescription="title_tv" />

    <TextView
        android:id="@+id/date_released_tv"
        tools:contentDescription="date_release_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/size22dp" />

    <RatingBar
        android:id="@+id/voter_average"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="10"
        android:max="10"
        tools:contentDescription="voter_average"
        android:layout_marginRight="@dimen/margin2dp"
        android:layout_marginEnd="@dimen/margin2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/vote_average_tv"
        tools:contentDescription="voter_average_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
        